#!/usr/bin/env bash
set -euo pipefail

# emu provides handy functions for working with the Android Emulator using adb.

cmd="${1-}"

if [ -z "$cmd" ]; then
    echo "command not provided"
    exit 1
fi

case "$cmd" in 
    "font") 
        font="${2-}"
        if [ -z "$font" ]; then
            echo "font not provided"
            exit 1
        fi

        case "$font" in 
            "small")
                adb shell settings put global font_scale 1.85
                ;;
            "default")
                adb shell settings put global font_scale 1.0
                ;;
            "large")
                adb shell settings put global font_scale 1.15
                ;;
            "largest")
                adb shell settings put global font_scale 1.30
                ;;
            "reset")
                adb shell wm density reset
                ;;
            *)
                echo "invalid font"
                exit 1
                ;;
        esac
        ;;
esac

